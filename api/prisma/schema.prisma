generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ENUMS ---
enum UserRole {
  SUPER_ADMIN
  GERENTE
  ENCARGADA
  ANFITRION
  TECNICO
  QA
  ALMACEN
  MENSAJERO
  CLIENTE
}

enum OrderStatus {
  TRIAJE
  DIAGNOSTICO
  ESPERA_REPUESTO
  MICRO_SOLDADURA
  QA
  LISTO
  ENTREGADO
  GARANTIA
}

enum Priority {
  BAJA
  MEDIA
  ALTA
  URGENTE
  GARANTIA
}

enum TransferStatus {
  PENDING
  IN_TRANSIT
  RECEIVED
  CANCELLED
}

// --- MODELOS ---

model User {
  id              String         @id @default(uuid())
  name            String
  email           String         @unique
  password        String
  role            UserRole       @default(ANFITRION)
  isActive        Boolean        @default(true)
  avatar          String?
  lastLogin       DateTime?
  storeId         String
  store           Store          @relation(fields: [storeId], references: [id])
  ordersCreated   ServiceOrder[] @relation("CreatedBy")
  ordersAssigned  ServiceOrder[] @relation("AssignedTo")
  cashRegisters   CashRegister[] @relation("OpenedBy")
  timeEntries     TimeEntry[]    @relation("TechnicianTime")
  commissions     Commission[]
  createdAt       DateTime       @default(now())
  @@map("users")
}

model Store {
  id              String          @id @default(uuid())
  name            String
  code            String          @unique
  address         String?
  phone           String?
  email           String?
  users           User[]
  orders          ServiceOrder[]
  parts           PartStock[]
  safeKits        SafeKit[]
  cashRegisters   CashRegister[]
  fixedExpenses   FixedExpense[]
  transfersFrom   StockTransfer[] @relation("FromStore")
  transfersTo     StockTransfer[] @relation("ToStore")
  @@map("stores")
}

model Customer {
  id         String         @id @default(uuid())
  name       String
  phone      String
  email      String?
  address    String?
  documentId String         @unique
  devices    Device[]
  orders     ServiceOrder[]
  invoices   Invoice[]
  deliveryRequests DeliveryRequest[]
  createdAt  DateTime       @default(now())
  @@map("customers")
}

model Device {
  id           String         @id @default(uuid())
  model        String
  brand        String?
  type         String?
  serialNumber String         @unique
  imei         String?
  color        String?
  lockType     String?
  pattern      String?
  pin          String?
  password     String?
  customerId   String
  customer     Customer       @relation(fields: [customerId], references: [id])
  orders       ServiceOrder[]
  @@map("devices")
}

model ServiceOrder {
  id            String       @id @default(uuid())
  orderNumber   String       @unique
  status        OrderStatus  @default(TRIAJE)
  priority      Priority     @default(MEDIA)
  diagnosis     String?
  solution      String?
  reportedIssue String?
  estimatedCost Float?
  finalCost     Float?
  grossProfit   Float?
  completedAt   DateTime?
  
  customerId    String
  customer      Customer     @relation(fields: [customerId], references: [id])
  deviceId      String
  device        Device       @relation(fields: [deviceId], references: [id])
  storeId       String
  store         Store        @relation(fields: [storeId], references: [id])
  
  createdById   String
  createdBy     User         @relation("CreatedBy", fields: [createdById], references: [id])
  assignedToId  String?
  assignedTo    User?        @relation("AssignedTo", fields: [assignedToId], references: [id])

  safeKitId     String?      @unique
  safeKit       SafeKit?     @relation(fields: [safeKitId], references: [id])

  partsUsed     PartUsage[]
  invoices      Invoice[]
  deliveryRequests DeliveryRequest[]
  timeEntries   TimeEntry[]
  checklist     Json?
  createdAt     DateTime     @default(now())
  @@map("service_orders")
}

model Part {
  id              String          @id @default(uuid())
  sku             String          @unique
  name            String
  category        String?
  description     String?
  compatibleModels String?
  costPrice       Float           @default(0)
  salePrice       Float           @default(0)
  shippingCost    Float           @default(0)
  operationalCost Float           @default(0)
  minStock        Int             @default(5)
  stock           PartStock[]
  usages          PartUsage[]
  transfers       StockTransfer[]
  createdAt       DateTime        @default(now())
  @@map("parts")
}

model PartStock {
  id       String @id @default(uuid())
  quantity Int    @default(0)
  reserved Int    @default(0)
  partId   String
  part     Part   @relation(fields: [partId], references: [id])
  storeId  String
  store    Store  @relation(fields: [storeId], references: [id])
  @@unique([partId, storeId])
  @@map("part_stocks")
}

model CashRegister {
  id          String   @id @default(uuid())
  storeId     String
  store       Store    @relation(fields: [storeId], references: [id])
  status      String   @default("OPEN")
  isOpen      Boolean  @default(true)
  openingUSD  Float    @default(0)
  openingVES  Float    @default(0)
  systemUSD   Float    @default(0)
  systemVES   Float    @default(0)
  declaredUSD Float?
  declaredVES Float?
  balance     Float    @default(0)
  openedById  String
  openedBy    User     @relation("OpenedBy", fields: [openedById], references: [id])
  expenses    PettyCashExpense[]
  createdAt   DateTime @default(now())
  openedAt    DateTime @default(now())
  @@map("cash_registers")
}

model Invoice {
  id             String       @id @default(uuid())
  invoiceNumber  String?      @unique
  orderId        String
  order          ServiceOrder @relation(fields: [orderId], references: [id])
  customerId     String?
  customer       Customer?    @relation(fields: [customerId], references: [id])
  storeId        String?
  amount         Float
  total          Float?
  paidTotal      Float?
  igtfAmount     Float?
  status         String
  payments       Payment[]
  paidAt         DateTime?
  createdAt      DateTime     @default(now())
  @@map("invoices")
}

model Payment {
  id        String   @id @default(uuid())
  invoiceId String
  invoice   Invoice  @relation(fields: [invoiceId], references: [id])
  amount    Float
  method    String?
  createdAt DateTime @default(now())
  @@map("payments")
}

model PartUsage {
  id        String       @id @default(uuid())
  partId    String
  part      Part         @relation(fields: [partId], references: [id])
  orderId   String
  order     ServiceOrder @relation(fields: [orderId], references: [id])
  quantity  Int          @default(1)
  costPrice Float?
  salePrice Float?
  createdAt DateTime     @default(now())
  @@map("part_usages")
}

model PettyCashExpense {
  id             String       @id @default(uuid())
  cashRegisterId String?      // Opcional para evitar conflictos con registerId en controladores
  registerId     String?      // Alias requerido por cashRegisterController.ts
  cashRegister   CashRegister? @relation(fields: [cashRegisterId], references: [id])
  amount         Float
  description    String
  category       String?
  currency       String?
  createdAt      DateTime     @default(now())
  @@map("petty_cash_expenses")
}

model DeliveryRequest {
  id            String       @id @default(uuid())
  orderId       String
  order         ServiceOrder @relation(fields: [orderId], references: [id])
  customerId    String?
  customer      Customer?    @relation(fields: [customerId], references: [id])
  messengerId   String?
  status        String
  address       String?
  latitude      Float?
  longitude     Float?
  scheduledDate DateTime?
  completedAt   DateTime?
  requestedAt   DateTime     @default(now())
  createdAt     DateTime     @default(now())
  @@map("delivery_requests")
}

model TimeEntry {
  id           String       @id @default(uuid())
  orderId      String
  order        ServiceOrder @relation(fields: [orderId], references: [id])
  technicianId String?
  technician   User?        @relation("TechnicianTime", fields: [technicianId], references: [id])
  startTime    DateTime     @default(now())
  endTime      DateTime?
  createdAt    DateTime     @default(now())
  @@map("time_entries")
}

model FixedExpense {
  id        String   @id @default(uuid())
  storeId   String
  store     Store    @relation(fields: [storeId], references: [id])
  name      String?
  amount    Float
  category  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  @@map("fixed_expenses")
}

model Commission {
  id           String   @id @default(uuid())
  technicianId String
  technician   User     @relation(fields: [technicianId], references: [id])
  amount       Float
  status       String
  createdAt    DateTime @default(now())
  @@map("commissions")
}

model TechnicianDebit {
  id           String   @id @default(uuid())
  technicianId String
  amount       Float
  reason       String
  createdAt    DateTime @default(now())
  @@map("technician_debits")
}

model StockTransfer {
  id             String         @id @default(uuid())
  quantity       Int
  status         TransferStatus @default(PENDING)
  partId         String
  part           Part           @relation(fields: [partId], references: [id])
  fromStoreId    String
  fromStore      Store          @relation("FromStore", fields: [fromStoreId], references: [id])
  toStoreId      String
  toStore        Store          @relation("ToStore", fields: [toStoreId], references: [id])
  requestedById  String?
  createdAt      DateTime       @default(now())
  @@map("stock_transfers")
}

model SafeKit {
  id           String        @id @default(uuid())
  code         String        @unique
  storeId      String
  store        Store         @relation(fields: [storeId], references: [id])
  currentOrder ServiceOrder?
  @@map("safe_kits")
}

model DailyTarget {
  id        String   @id @default(uuid())
  amount    Float
  date      DateTime @default(now())
  @@map("daily_targets")
}

model QAResult {
  id        String   @id @default(uuid())
  orderId   String
  result    String
  createdAt DateTime @default(now())
  @@map("qa_results")
}