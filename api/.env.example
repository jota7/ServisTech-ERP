# ============================================
# SERVISTECH ERP V4.0 - Environment Configuration
# ============================================

# Application
NODE_ENV=development
PORT=3000
API_VERSION=v4.0.0

# Frontend URL (CORS)
FRONTEND_URL=http://localhost:5173

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/servistech?schema=public

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-secret-key

# BCV Scraper
BCV_SCRAPER_ENABLED=true
BCV_SCRAPER_CRON=0 8 * * *

# Binance API
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret

# Rate Sync
RATE_SYNC_INTERVAL=3600000
RATE_CACHE_TTL=3600

# Cloud Storage (S3/Cloudinary/Supabase)
# Opción 1: AWS S3
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1
AWS_S3_BUCKET=servistech-uploads

# Opción 2: Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Opción 3: Supabase Storage
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key
SUPABASE_STORAGE_BUCKET=servistech

# Redis (opcional - para cache de tasas)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# WhatsApp Business API
WHATSAPP_ENABLED=false
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Commission Settings
DEFAULT_TECHNICIAN_RATE=35
DEFAULT_ENCARGADA_FLAT_RATE=1
DEFAULT_ENCARGADA_ACCESSORY_RATE=10

# Feature Flags
ENABLE_WARRANTY_MODULE=true
ENABLE_COMMISSION_MODULE=true
ENABLE_DELIVERY_MODULE=true
ENABLE_TARGET_MODULE=true
