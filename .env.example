# =============================================================================
# SERVISTECH ERP V4.0 - Environment Configuration Template
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=servistech
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=servistech_erp
DATABASE_URL=postgresql://servistech:your_password@pgbouncer:6432/servistech_erp?schema=public&connection_limit=5
DIRECT_URL=postgresql://servistech:your_password@postgres:5432/servistech_erp?schema=public

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_password@redis:6379

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_SECRET=your_super_secret_jwt_key_min_32_chars
JWT_EXPIRES_IN=24h

# =============================================================================
# API Configuration
# =============================================================================
NODE_ENV=production
PORT=3001
API_URL=https://api.servistech.com
CORS_ORIGIN=https://erp.servistech.com

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# File Upload Configuration
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# =============================================================================
# BCV Scraping Configuration
# =============================================================================
BCV_SCRAPE_ENABLED=true
BCV_URL=https://www.bcv.org.ve/

# =============================================================================
# Binance API Configuration
# =============================================================================
BINANCE_API_ENABLED=true
BINANCE_API_URL=https://api.binance.com

# =============================================================================
# Rate Service Configuration
# =============================================================================
RATE_CACHE_TTL=300
DEFAULT_BCV_RATE=36.50

# =============================================================================
# Audit Logging
# =============================================================================
AUDIT_LOG_ENABLED=true

# =============================================================================
# Cron Jobs Configuration
# =============================================================================
CRON_API_KEY=your_cron_api_key_here

# =============================================================================
# AWS S3 Backup Configuration (Optional)
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
BACKUP_S3_BUCKET=servistech-backups
BACKUP_S3_REGION=us-east-1

# =============================================================================
# Slack Notifications (Optional)
# =============================================================================
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# Cloudflare Configuration (Optional)
# =============================================================================
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_zone_id

# =============================================================================
# Railway/Render Deployment (Optional)
# =============================================================================
RAILWAY_TOKEN=your_railway_token
RENDER_API_KEY=your_render_api_key
RENDER_SERVICE_ID=your_render_service_id

# =============================================================================
# Vercel Deployment (Optional)
# =============================================================================
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_org_id
VERCEL_PROJECT_ID=your_project_id

# =============================================================================
# Frontend Environment Variables (for Vite)
# =============================================================================
VITE_API_URL=https://api.servistech.com
VITE_WS_URL=wss://api.servistech.com/ws

# =============================================================================
# Docker Compose URLs (para referencia interna)
# =============================================================================
API_URL=http://api:3001
WS_URL=ws://websocket:3002
FRONTEND_URL=http://frontend:80
