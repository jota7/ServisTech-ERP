// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------------------------------------------------------
// MODELOS DEL SISTEMA SERVISTECH
// ---------------------------------------------------------

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("TECHNICIAN") // ADMIN, TECHNICIAN, RECEPTIONIST
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  email     String?
  phone     String
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Order {
  id           String   @id @default(uuid())
  orderNumber  Int      @unique @default(autoincrement())
  device       String   // Ejemplo: iPhone 13 Pro
  brand        String   // Ejemplo: Apple
  model        String
  serialNumber String?
  problem      String
  observations String?
  status       String   @default("PENDING") // PENDING, REPAIRING, READY, DELIVERED
  cost         Float    @default(0)
  price        Float    @default(0)
  
  customerId   String
  customer     Customer @relation(fields: [customerId], references: [id])
  
  technicianId String?
  technician   User?    @relation(fields: [technicianId], references: [id])
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Inventory {
  id          String   @id @default(uuid())
  partName    String
  brand       String
  compatibleModels String[]
  stock       Int      @default(0)
  minStock    Int      @default(5)
  cost        Float
  price       Float
  location    String?  // Ejemplo: Estante A-1
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BcvRate {
  id        String   @id @default(uuid())
  rate      Float
  date      DateTime @default(now())
}